@page "/products"
@inject IProductRepository repository
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<h3>Products List</h3>

<div>
    <form method="post">
        <label for="searchText">Type search text:</label>
        <input type="text" id="searchText" name="text" class="form-control" @bind=@searchText @bind:event="oninput" @bind:after="@HandleSearch" />
        <button type="button" class="btn btn-primary" @onclick="HandleSearch">Search</button>
    </form>
</div>

@if (products is null)
{
    <LoaderComponent Title="Loading products" />
}
else
{
    <TableTemplate Items="@products">
        <HeaderTemplate>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </HeaderTemplate>
        <RowTemplate>
            <td>@context.Id</td>
            <td>@context.Name</td>
            <td>@context.Description</td>
            <td>@context.Price</td>
        </RowTemplate>
    </TableTemplate>
}


@code {

    private IEnumerable<Product>? products;
    private string searchText { get; set; }

    protected override async Task OnInitializedAsync()
    {
        products = await repository.GetAllAsync();
    }


    private async Task HandleSearch()
    {
        products = await repository.GetByTextAsync(searchText);
    }
}