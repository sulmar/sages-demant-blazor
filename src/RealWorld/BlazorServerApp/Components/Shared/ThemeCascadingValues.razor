<CascadingValue Value="@Theme" Name="MyTheme">
    <CascadingValue Value="@Margin">
        @ChildContent
    </CascadingValue>
</CascadingValue>


@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Theme { get; set; } = "dark";

    [Parameter]
    public int Margin { get; set; } = 1;

}
