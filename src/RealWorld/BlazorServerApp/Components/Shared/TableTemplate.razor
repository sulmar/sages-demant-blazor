@typeparam T where T : BaseEntity

<table class="table table-@Theme m-@Margin">

    <thead>
        <tr>
          @HeaderTemplate
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Items)
        {
            <tr @key=@item.Id>
                @RowTemplate(item)               
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">
                @if (Items.Count() == 0)
                {
                    <p><em>No items found.</em></p>
                }
                else
                {
                    <p>Total Items: @Items.Count()</p>
                }
            </td>
        </tr>
    </tfoot>



</table>

@code {

    [Parameter, EditorRequired]
    public IEnumerable<T>? Items { get; set; }

    [Parameter, EditorRequired]
    public required RenderFragment HeaderTemplate { get; set; }

    [Parameter, EditorRequired]
    public required RenderFragment<T> RowTemplate { get; set; }

    [CascadingParameter]
    public string Theme { get; set; } = "light";

    [CascadingParameter]
    public int Margin { get; set; } = 0;

}
