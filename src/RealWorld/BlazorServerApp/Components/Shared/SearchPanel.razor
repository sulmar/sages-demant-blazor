<div>
    <form method="post">
        <label for="searchText">Type search text:</label>
        <input type="text" id="searchText" name="text" class="form-control" @bind=@searchText @bind:event="oninput" @bind:after="@HandleSearch"
        />
        <button type="button" class="btn btn-primary" @onclick="HandleSearch">Search</button>
    </form>
</div>

@code {

    private string searchText { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; } 

    private async Task HandleSearch()
    {
        await ValueChanged.InvokeAsync(searchText);
    }

}